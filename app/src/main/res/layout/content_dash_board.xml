<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nadim.csedashboard.DashBoardActivity"
    tools:showIn="@layout/app_bar_dash_board">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logged in as: S,M. Nadim (Admin)"
        android:id="@+id/textView_uname_and_type"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView_notice"
        android:layout_centerHorizontal="true"
        android:overScrollMode="never"
        android:layout_below="@+id/textView_uname_and_type" />

</RelativeLayout>
